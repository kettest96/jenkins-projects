pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/your-username/my-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("myapp-image")
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh "docker run -d -p 3000:3000 --name myapp myapp-image"
                }
            }
        }
    }
}
